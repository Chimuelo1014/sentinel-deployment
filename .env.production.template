# ==============================================
# SENTINEL PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# IMPORTANT: Copy this file to .env.production and fill with real values
# DO NOT commit .env.production to Git!

# Database Configuration
DB_USER=sentinel_prod
DB_PASSWORD=CHANGE_THIS_SECURE_DB_PASSWORD_MIN_32_CHARS

# MongoDB
MONGO_USER=admin
MONGO_PASSWORD=CHANGE_THIS_MONGO_PASSWORD_MIN_32_CHARS

# RabbitMQ
RABBITMQ_USER=sentinel
RABBITMQ_PASSWORD=CHANGE_THIS_RABBITMQ_PASSWORD_MIN_32_CHARS

# Kong Gateway
KONG_DB_PASSWORD=CHANGE_THIS_KONG_DB_PASSWORD_MIN_32_CHARS

# JWT Secret (CRITICAL - Must be same across all services)
JWT_SECRET=CHANGE_THIS_JWT_SECRET_MINIMUM_64_CHARACTERS_VERY_SECURE_AND_RANDOM

# MercadoPago (Use PRODUCTION credentials)
MERCADOPAGO_ACCESS_TOKEN=YOUR_PRODUCTION_ACCESS_TOKEN_HERE

# n8n Automation
N8N_USER=admin
N8N_PASSWORD=CHANGE_THIS_N8N_PASSWORD
N8N_HOST=sentinel.crudzaso.com
N8N_WEBHOOK_URL=https://service.sentinel.crudzaso.com/webhook

# Domain Configuration
API_DOMAIN=service.sentinel.crudzaso.com
APP_DOMAIN=sentinel.crudzaso.com
FRONTEND_API_URL=https://service.sentinel.crudzaso.com

# Email Configuration (if using SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Optional: Monitoring
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
