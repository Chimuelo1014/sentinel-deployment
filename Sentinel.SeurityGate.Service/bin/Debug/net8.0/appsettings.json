{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Sentinel.SecurityGate.Service": "Debug"
    }
  },
  "AllowedHosts": "*",
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ScanRequestExchange": "sentinel.scan.requests",
    "ScanResultExchange": "sentinel.scan.results",
    "ScanRequestQueue": "security-gate.scan.requests.queue",
    "ScanResultQueue": "security-gate.scan.results.queue",
    "SastRoutingKey": "scan.sast.requested",
    "DastRoutingKey": "scan.dast.requested"
  },
  "N8n": {
    "BaseUrl": "http://n8n:5678",
    "SastWebhookUrl": "http://n8n:5678/webhook/sast",
    "DastWebhookUrl": "http://n8n:5678/webhook/dast",
    "TrivyWebhookUrl": "http://n8n:5678/webhook/trivy"
  },
  "ScannerOrchestrator": {
    "BaseUrl": "http://scanner-orchestrator-service:8086",
    "UpdateStatusEndpoint": "/api/internal/scans/{scanId}/status",
    "UpdateResultsEndpoint": "/api/internal/scans/{scanId}/results"
  },
  "CodeQuality": {
    "BaseUrl": "http://code-quality-service:5001"
  },
  "Vulnerability": {
    "BaseUrl": "http://vulnerability-service:5002"
  },
  "Database": {
    "ConnectionString": "Server=postgres;Port=5432;Database=SentinelSecurityGate;User Id=postgres;Password=postgres;"
  }
}